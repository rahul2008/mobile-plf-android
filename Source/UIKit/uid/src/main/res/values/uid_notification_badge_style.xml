<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="NotificationBadge">
        <item name="fontPath">fonts/centralesansbook.ttf</item>
        <item name="android:paddingStart">@dimen/uid_notificationbadge_padding</item>
        <item name="android:paddingEnd">@dimen/uid_notificationbadge_padding</item>
        <item name="android:textColor">?attr/uidNotificationBadgeDefaultTextColor</item>
        <item name="android:gravity">center|center_horizontal</item>
        <item name="android:layout_gravity">top|right</item>
        <item name="android:visibility">invisible</item>
        <item name="android:elevation">@dimen/uid_notificationbadge_elevation</item>

        <item name="android:textSize">@dimen/uid_notificationbadge_default_textSize</item>
        <item name="android:background">@drawable/uid_default_notificationbadge_background</item>
        <item name="backgroundTint">?attr/uidNotificationBadgeDefaultBackgroundColor</item>
    </style>

    <style name="NotificationBadge.Small">
        <item name="android:textSize">@dimen/uid_notificationbadge_small_textSize</item>
        <item name="android:background">@drawable/uid_small_notificationbadge_background</item>
    </style>
    <!-- Notification Badge-->
    <declare-styleable name="NotificationBadgeStyle"/>
</resources>