<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:layout_marginTop="10dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_insight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="2dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/insight_id_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="InsightID : " />

        <TextView
            android:id="@+id/insight_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_moment_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_insight"
        android:layout_margin="2dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/moment_id_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="MomentID : " />

        <TextView
            android:id="@+id/moment_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_last_modified"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_moment_id"
        android:layout_margin="2dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/last_modified_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="LastModified : " />

        <TextView
            android:id="@+id/last_modified"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_rule_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_last_modified"
        android:layout_margin="2dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/rule_id_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="RuleID : " />

        <TextView
            android:id="@+id/rule_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_delete_insight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_rule_id"
        android:layout_margin="2dp"
        android:text="Delete" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/btn_delete_insight"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/black" />

</RelativeLayout>