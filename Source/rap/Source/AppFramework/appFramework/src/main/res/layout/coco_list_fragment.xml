<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.philips.platform.uid.view.widget.Label
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:background="?attr/uidContentSecondaryBackgroundColor"
        android:text="@string/common_components"
        android:textColor="@color/uid_list_item_text_selector"
        android:textSize="22sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/coco_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>