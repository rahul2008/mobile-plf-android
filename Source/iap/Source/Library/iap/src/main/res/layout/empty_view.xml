<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/border16_margin_left_right">

    <com.philips.platform.uid.view.widget.Label
        android:id="@+id/tv_empty_list_found"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="4dp"
        style="@style/iapCentralesansBoldFont"
        android:text="@string/iap_zero_results_found"
        android:background="@color/uidColorWhite"
        android:textColor="?attr/uidContentItemPrimaryNormalTextColor"
        android:textSize="16sp"
        android:gravity="center_vertical"
        android:drawableStart="@android:drawable/ic_menu_info_details"
        />

    <com.philips.platform.uid.view.widget.Label
        android:padding="4dp"
        android:id="@+id/tv_empty_list_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/iap_zero_results_message"
        android:background="@color/uidColorWhite"
        android:textColor="?attr/uidContentItemPrimaryNormalTextColor"
        android:textSize="16sp"
        />

</LinearLayout>