<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/border16_margin_left_right">

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/iap_retailer_image"
        android:layout_width="@dimen/iap_network_image_width_height"
        android:layout_height="@dimen/iap_network_image_width_height"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/border12_margin" />


    <LinearLayout
        android:id="@+id/iap_retailerItem_description_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/iap_retailer_image"
        android:orientation="vertical">

        <com.philips.platform.uid.view.widget.Label
            android:id="@+id/iap_retailerItem_onlineStoreName_lebel"
            style="@style/iapCentralesansBookFont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:textColor="?attr/uidContentItemPrimaryNormalTextColor"
            android:textSize="@dimen/iap_retailers_store_name_size" />

        <com.philips.platform.uid.view.widget.Label
            android:id="@+id/iap_retailerItem_onlineStoreAvailability_lebel"
            style="@style/iapCentralesansBookFont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/iap_retailers_store_name_size_12sp" />
    </LinearLayout>

    <com.philips.platform.uid.view.widget.Label
        android:id="@+id/retailer_arrow"
        style="@style/iap_right_arrow_product_catalog"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true" />
</RelativeLayout>