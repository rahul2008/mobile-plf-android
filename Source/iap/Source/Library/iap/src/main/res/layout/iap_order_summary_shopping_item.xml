<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="?attr/uidContentPrimaryBackgroundColor">

    <RelativeLayout
        android:id="@+id/rl_list_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/iv_product_image"
            style="@style/networkImage"
            android:layout_alignParentStart="true" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/iap_shipping_address_margin_left"
            android:layout_toEndOf="@id/iv_product_image"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_productName"
                style="@style/tvBoldTitle"
                android:layout_alignBaseline="@id/tv_total_price"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@id/tv_total_price"
                android:scrollHorizontally="false" />

            <TextView
                android:id="@+id/tv_total_price"
                style="@style/tvBoldTitle"
                android:layout_marginStart="@dimen/iap_shopping_cart_image_right"
                android:layout_alignParentEnd="true"
                android:layout_gravity="end"
                android:layout_marginTop="3dp"
                android:gravity="end" />

            <RelativeLayout
                android:id="@+id/quantity_count_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_productName"
                android:layout_marginTop="@dimen/iap_shopping_cart_price_margin_bottom"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/quantity_label"
                    style="@style/tvTitle"
                    android:layout_marginEnd="@dimen/iap_image_margin_right"
                    android:layout_marginTop="0dp"
                    android:text="@string/iap_quantity" />

                <TextView
                    android:id="@+id/tv_quantity"
                    style="@style/tvTitle"
                    android:layout_alignBaseline="@id/quantity_label"
                    android:layout_toEndOf="@id/quantity_label"
                    android:drawablePadding="@dimen/iap_count_drop_down_icon_padding"
                    android:textColor="?attr/uidContentItemPrimaryNormalTextColor"
                    android:textSize="14sp" />
            </RelativeLayout>
        </RelativeLayout>

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/iap_divider_height"
            android:layout_below="@id/iv_product_image"
            android:layout_marginTop="@dimen/iap_selection_address_layout_margin"
           />
    </RelativeLayout>

</LinearLayout>