<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="BaseLayoutMargins">
        <item name="android:background">?attr/uidContentPrimaryBackgroundColor</item>
    </style>

    <style name="BaseLayoutMargins.Dimens">
        <item name="android:layout_height">@dimen/layout_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="TestButtonTexts">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/button_toggle_text_size</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/layout_margin_left_right</item>
        <item name="fontPath">fonts/centralesansbook.ttf</item>
    </style>

    <style name="ButtonsCategoryStyle" parent="UIDLabel.RecyclerViewHeaderText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="fontPath">fonts/centralesansbook.ttf</item>
    </style>
    <style name="ThemeSettingsHeader1Text">
        <item name="android:textColor">@android:color/primary_text_light</item>
        <item name="android:textSize">16sp</item>
        <item name="fontPath">fonts/centralesansbook.ttf</item>
    </style>

    <style name="ThemeSettingsHeader2Text">
        <item name="android:textColor">@android:color/primary_text_light</item>
        <item name="android:textSize">12sp</item>
        <item name="fontPath">fonts/centralesansbook.ttf</item>
    </style>

    <style name="ThemeSettingsLabelText">
        <item name="android:textSize">10sp</item>
        <item name="android:paddingStart">4dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="fontPath">fonts/centralesansbook.ttf</item>
    </style>

    <style name="RecyclerViewRadioButton">
        <item name="android:layout_height">@dimen/radio_button_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingStart">@dimen/radio_button_text_padding_left_right</item>
        <item name="android:paddingEnd">@dimen/radio_button_text_padding_left_right</item>
    </style>
    <style name="TestButtonSecondaryText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/uidCheckBoxDefaultDisabledBackgroundColor</item>
        <item name="android:textSize">@dimen/button_category_text_size</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/layout_margin_left_right</item>
        <item name="fontPath">fonts/centralesansbook.ttf</item>
    </style>

    <style name="UIDLabel.TestButtonTexts">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/button_toggle_text_size</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/layout_margin_left_right</item>
        <item name="fontPath">fonts/centralesansbook.ttf</item>
    </style>

    <style name="ItemLabel" parent="UIDLabel">
        <item name="android:textColor">?attr/uidLabelDescriptorNormalTextColor</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">start</item>
        <item name="android:layout_marginTop">@dimen/label_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/label_margin_bottom</item>
    </style>

    <style name="TestRadioButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">@dimen/radio_button_text_padding_left_right</item>
        <item name="android:paddingEnd">@dimen/radio_button_text_padding_left_right</item>
    </style>

    <style name="TestRadioGroupStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/layout_margin_left_right</item>
        <item name="android:layout_marginEnd">@dimen/layout_margin_left_right</item>
    </style>
</resources>

