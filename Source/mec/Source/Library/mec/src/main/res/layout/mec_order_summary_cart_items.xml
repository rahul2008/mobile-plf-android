<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="ecsEntries"
            type="com.philips.cdp.di.ecs.model.cart.ECSEntries" />

    </data>


    <RelativeLayout
        android:id="@+id/parent_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/uidColorWhite"
        android:clickable="true"
        android:focusable="true">

        <RelativeLayout
            android:id="@+id/product_parent_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/iap_text_size_16sp"
            android:paddingTop="@dimen/iap_text_size_16sp"
            android:paddingEnd="@dimen/iap_text_size_16sp">

            <FrameLayout
                android:id="@+id/frame"
                android:layout_width="92dp"
                android:layout_height="110dp"
                android:layout_marginEnd="@dimen/border8_margin">

                <com.android.volley.toolbox.NetworkImageView
                    android:id="@+id/image"
                    android:layout_width="@dimen/iap_network_image_width_height"
                    android:layout_height="@dimen/iap_network_image_width_height"
                    android:tooltipText="@{ ecsEntries.product.name}"
                    app:image_url="@{ ecsEntries.product.summary.imageURL}" />


                <ImageView
                    android:id="@+id/iv_camera"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="top|start"
                    android:background="@drawable/mec_circular_background"
                    android:src="@drawable/mec_wishlist"
                    android:tint="@color/colorAccent"
                    android:visibility="invisible"
                    android:contentDescription="@string/app_name" />
            </FrameLayout>


            <LinearLayout
                android:id="@+id/mec_product_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/frame"
                android:orientation="vertical">

                <com.philips.platform.uid.view.widget.Label
                    android:id="@+id/mec_productName_lebel"
                    style="@style/mecCentralesansBookFont"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text='@{ecsEntries.product.summary.productTitle ?? ""}'
                    android:textColor="?attr/uidContentItemPrimaryNormalTextColor"
                    android:textSize="16sp" />

                <LinearLayout
                    android:id="@+id/quantity_count_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/iap_margin_20dp">

                    <com.philips.platform.uid.view.widget.Label
                        android:id="@+id/mec_quantity_val"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text='@{"Quantity: "+ ecsEntries.quantity}'
                        android:textColor="?attr/uidTextBoxQuietNormalTextColor"
                        android:textSize="@dimen/iap_text_size_16sp" />

                    <com.philips.platform.uid.view.widget.Label
                        android:id="@+id/mec_price_lebel"
                        style="@style/mecCentralesansMediumFont"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:text="@{ecsEntries.totalPrice.formattedValue}"
                        android:textColor="?attr/uidContentItemPrimaryNormalTextColor"
                        android:textSize="@dimen/iap_text_size_16sp" />

                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>

        <View
            android:id="@+id/price_button_view"
            android:layout_width="match_parent"
            android:layout_height="0.05dp"
            android:layout_below="@+id/product_parent_layout"
            android:background="?attr/uidContentItemTertiaryNormalTextColor" />

    </RelativeLayout>

</layout>