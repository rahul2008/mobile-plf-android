<com.philips.platform.uid.view.widget.NavigationContainer xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   >

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="0dp"
        android:background="@drawable/uid_shadow_level_two"
        app:elevation="0dp">

        <android.support.v7.widget.Toolbar
            android:id="@+id/mec_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="false">

            <FrameLayout
                android:id="@+id/mec_header_back_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:clickable="true"
                android:paddingStart="@dimen/border16_margin_left_right"
                android:paddingEnd="@dimen/border16_margin_left_right">

                <ImageView
                    android:id="@+id/mec_iv_header_back_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical" />
            </FrameLayout>

            <com.philips.platform.uid.view.widget.ActionBarTextView
                android:id="@+id/mec_actionBar_headerTitle_lebel"
                style="@style/UIDToolbarBarTitleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textIsSelectable="true" />

            <FrameLayout
                android:id="@+id/cart_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/cart_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="10dp"
                    android:paddingEnd="@dimen/network_margin_left_right" />

                <com.philips.platform.uid.view.widget.NotificationBadge
                    android:id="@+id/item_count"
                    style="@style/NotificationBadge.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|start"
                    android:layout_marginBottom="15dp" />
            </FrameLayout>

        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>
</com.philips.platform.uid.view.widget.NavigationContainer>