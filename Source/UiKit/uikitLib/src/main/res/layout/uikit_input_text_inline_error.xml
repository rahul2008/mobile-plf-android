<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/errorlayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/error_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_gravity="center">

        <com.shamanland.fonticon.FontIconTextView
            android:id="@+id/inline_error_icon"
            fontPath="fonts/puicon.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginRight="9dp"
            android:layout_marginBottom="19dp"
            android:text="@string/uikit_fonticon_cross"
            android:textColor="?attr/uikit_erroriconcolorinlineforms"
            android:textSize="13sp"
            android:textStyle="bold" />

    </FrameLayout>

    <TextView
        android:id="@+id/inline_error_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/error_image"
        android:layout_toRightOf="@+id/error_image"
        android:fontFamily="fonts/centralesansbook.ttf"
        android:includeFontPadding="true"
        android:textColor="?attr/uikit_errortextcolorinlineforms"
        android:visibility="gone"
        android:textSize="16sp" />

    <View
        android:layout_below="@id/error_image"
        android:id="@+id/inlineForm_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/uikit_view_height" />
</RelativeLayout>