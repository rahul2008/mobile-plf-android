<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Button">
        <item name="fontPath">fonts/centralesansbook.ttf</item>
        <item name="android:gravity">center</item>
        <item name="android:minHeight">@dimen/button_height</item>
        <item name="android:clickable">true</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:paddingRight">@dimen/button_padding_sides</item>
        <item name="android:paddingLeft">@dimen/button_padding_sides</item>
    </style>

    <style name="Button.Normal">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Button.Normal.LightBlue">
        <item name="android:background">@drawable/light_blue_selector</item>
    </style>

    <style name="Button.Normal.BrightBlue">
        <item name="android:background">@drawable/bright_blue_selector</item>
    </style>

    <style name="Button.Normal.VeryLightBlue">
        <item name="android:background">@drawable/very_light_blue_selector</item>
    </style>

    <style name="Button.Normal.BrightOrange">
        <item name="android:background">@drawable/bright_orange_selector</item>
    </style>

    <style name="Button.Normal.BrightAqua">
        <item name="android:background">@drawable/bright_aqua_selector</item>
    </style>

    <style name="Button.Normal.VeryLightOrange">
        <item name="android:background">@drawable/very_light_orange_selector</item>
    </style>

    <style name="Button.Normal.VeryLightAqua">
        <item name="android:background">@drawable/very_light_aqua_selector</item>
    </style>

    <style name="Button.InvertedLigthBLue">
        <item name="android:textColor">@drawable/light_blue_inverted_text_selector</item>
        <item name="android:background">@drawable/light_blue_inverted_selector</item>
    </style>

    <style name="Button.InvertedVeryLightBlue">
        <item name="android:textColor">@drawable/very_light_blue_inverted_text_selector</item>
        <item name="android:background">@drawable/very_light_blue_inverted_selector</item>
    </style>

    <style name="Button.InvertedVeryLightOrange">
        <item name="android:textColor">@drawable/very_light_orange_inverted_text_selector</item>
        <item name="android:background">@drawable/very_light_orange_inverted_selector</item>
    </style>

</resources>