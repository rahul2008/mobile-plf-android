<com.philips.platform.uid.view.widget.NavigationContainer xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.philips.platform.ths.activity.THSLaunchActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/ths_toolbar_layout"
            android:layout_height="?attr/actionBarSize"
            android:orientation="vertical">

            <android.support.design.widget.AppBarLayout
                android:id="@+id/appBar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:elevation="0dp">

                <include layout="@layout/uid_toolbar_layout" />

            </android.support.design.widget.AppBarLayout>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/uappFragmentLayout"
            android:layout_below="@+id/ths_toolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </RelativeLayout>

</com.philips.platform.uid.view.widget.NavigationContainer>
