<androidx.appcompat.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    android:layout_width="match_parent"
                                    android:layout_height="70dp"
                                    android:layout_margin="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_margin="10dp"
        android:paddingLeft="5dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/txt_ctn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:text="CTN"
                android:textColor="#222"
                android:textSize="12dp"/>

            <TextView
                android:id="@+id/txt_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:text="Status"
                android:textSize="12dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="25dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/txt_serialno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_ctn"
                android:layout_marginTop="10dp"
                android:layout_weight=".5"
                android:text="Serial No"
                android:textColor="#222"
                android:textSize="12dp"/>

            <TextView
                android:id="@+id/txt_errorstatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_ctn"
                android:layout_marginTop="10dp"
                android:layout_weight=".5"
                android:textColor="#222"
                android:textSize="12dp"/>
        </LinearLayout>

    </RelativeLayout>
</androidx.appcompat.widget.CardView>