    <TextView
        android:id="@+id/select_retailer"
        style="@style/iapCentralesansBoldFont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginBottom="@dimen/iap_select_retailer_bottom_margin"
        android:paddingLeft="@dimen/iap_select_retailer_left_margin"
        android:text="@string/iap_select_retailer"
        android:textColor="?attr/uikit_baseColor"
        android:textSize="@dimen/iap_select_retailer_text_size" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/select_retailer"
        android:background="?attr/uikit_listDividerColor" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/iap_retailer_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/divider"
        android:listSelector="@android:color/transparent" />

</RelativeLayout>