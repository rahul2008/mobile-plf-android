<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_list_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/iv_product_image"
            style="@style/networkImage"
            android:layout_marginTop="@dimen/iap_shopping_cart_image_margin_top"
            android:layout_marginLeft="@dimen/iap_shopping_cart_image_margin_top"
            android:layout_alignParentStart="true" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/iap_shipping_address_margin_left"
            android:layout_marginLeft="@dimen/iap_order_margin_top"
            android:layout_marginTop="@dimen/iap_shopping_cart_image_margin_top"
            android:layout_toEndOf="@id/iv_product_image">

            <TextView
                android:id="@+id/tv_productName"
                style="@style/tvBoldTitle"
                android:layout_alignParentStart="true"
                android:layout_toLeftOf="@id/tv_total_price"
                android:scrollHorizontally="false" />

            <TextView
                android:id="@+id/tv_total_price"
                style="@style/tvBoldTitle"
                android:layout_alignParentEnd="true"
                android:layout_gravity="end"
                android:layout_marginStart="@dimen/iap_quantity_price_start_margin"
                android:layout_marginTop="3dp"
                android:gravity="end"
                android:visibility="gone"/>

            <RelativeLayout
                android:id="@+id/quantity_count_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_productName"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/from"
                    style="@style/tvTitle"
                    android:layout_marginEnd="3dp"
                    android:text="@string/iap_product_item_quantity"
                    android:layout_marginTop="0dp"
                    android:textSize="@dimen/quantity"/>

                <TextView
                    android:id="@+id/tv_quantity"
                    style="@style/tvTitle"
                    android:layout_alignBaseline="@id/from"
                    android:layout_toEndOf="@id/from"
                    android:layout_marginTop="0dp"
                    android:textSize="@dimen/quantity" />

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ctn_no"
                android:layout_below="@+id/quantity_count_layout"
                android:textColor="?attr/uikit_baseColor"
                android:textSize="@dimen/quantity"
                android:layout_marginTop="@dimen/iap_order_margin_top"
                />

        </RelativeLayout>

    </RelativeLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/iap_divider_height"
        android:layout_marginTop="@dimen/iap_selection_address_layout_margin"
        android:background="?attr/uikit_listDividerColor" />

</LinearLayout>

