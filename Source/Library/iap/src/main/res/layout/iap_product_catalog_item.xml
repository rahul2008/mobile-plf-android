<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/iap_catalog_margin_left_right"
    android:paddingRight="@dimen/iap_catalog_margin_left_right">

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/image"
        android:layout_width="@dimen/network_image_width"
        android:layout_height="@dimen/network_image_height"
        android:layout_marginBottom="@dimen/iap_shopping_cart_image_margin_top"
        android:layout_marginEnd="@dimen/iap_shopping_cart_image_right"
        android:layout_marginTop="@dimen/iap_shopping_cart_image_margin_top"
        android:paddingStart="@dimen/iap_shopping_cart_image_margin_top"
        android:src="@drawable/no_icon" />

    <LinearLayout
        android:id="@+id/price_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="@dimen/iap_image_bottom_margin"
        android:layout_marginTop="@dimen/iap_shopping_cart_image_margin_top"
        android:layout_toEndOf="@id/arrow"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_discounted_price"
            style="@style/iapCentralesansBoldFont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?attr/uikit_baseColor"
            android:textSize="16sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_price"
            style="@style/iapCentralesansBoldFont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/uikit_enricher4"
            android:textSize="16sp" />
    </LinearLayout>


    <TextView
        android:id="@+id/tv_product_name"
        style="@style/iapCentralesansBoldFont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/iap_shopping_cart_image_margin_top"
        android:layout_marginTop="@dimen/iap_shopping_cart_image_margin_top"
        android:layout_toStartOf="@id/price_container"
        android:layout_toEndOf="@id/image"
        android:textColor="?attr/uikit_baseColor"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_ctn"
        style="@style/iapCentralesansBookFont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_product_name"
        android:layout_marginBottom="@dimen/iap_shopping_cart_image_margin_top"
        android:layout_toEndOf="@id/image"
        android:textColor="?attr/uikit_baseColor"
        android:textSize="16sp" />


    <com.shamanland.fonticon.FontIconTextView
        android:id="@+id/arrow"
        style="@style/iap_right_arrow_product_catalog"
        android:layout_alignBaseline="@id/tv_ctn" />


    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/image"
        android:background="?attr/uikit_listDividerColor" />

</RelativeLayout>