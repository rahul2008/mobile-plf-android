<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="viewProductDetails_TopContainer">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="viewProductDetails_ProdImage">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="viewProductDetails_Product_Header">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textColor">@color/button_background</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:textSize">@dimen/title_text_size_medium</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_toRightOf">@id/productimage</item>
    </style>

    <style name="viewProductDetails_Product_Variant">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:lines">1</item>
        <item name="android:textColor">@color/text_sub_header_color</item>
    </style>

    <style name="viewProductDetailsButtons_prodinfo_philips_tab">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/consumercare_selector_option_button_bg</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/button_text_color</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_marginTop">17dp</item>
    </style>

    <style name="viewProductDetails_Buttons">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:background">@drawable/consumercare_selector_option_button_bg</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/button_text_color</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_marginTop">17dp</item>
    </style>

    <style name="viewProductDetails_Ads_Container">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">165dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <!--  <item name="android:layout_below">@id/prodbuttons</item> -->
    </style>

    <style name="viewProductDetails_Ads_Image">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="viewProductDetails_Ads_LeftArrow">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">26dp</item>
    </style>

    <style name="viewProductDetails_Ads_RightArrow">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">26dp</item>
    </style>

    <style name="viewProductDetails_Ads_PlayButton">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

</resources>