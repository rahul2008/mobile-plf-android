<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:reglib="http://reg.lib/schema"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


    <RelativeLayout
        android:id="@+id/rl_reg_parent_verified_field"
        android:layout_width="match_parent"
        android:layout_height="@dimen/reg_btn_height"
        android:background="@drawable/reg_et_focus_disable">

        <FrameLayout
            android:id="@+id/fl_reg_invalid_alert"
            android:layout_width="@dimen/reg_err_alert_width"
            android:layout_height="@dimen/reg_err_alert_width"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/reg_x_edit_field_margin"
            android:layout_marginLeft="@dimen/reg_x_edit_field_margin"
            android:layout_marginRight="@dimen/reg_x_edit_field_margin_right"
            android:layout_marginTop="@dimen/reg_x_edit_field_margin"
            android:visibility="gone">

        </FrameLayout>

        <com.philips.cdp.registration.ui.customviews.XEditText
            android:id="@+id/et_reg_verify"
            style="@style/reg_style_tab_hint"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/fl_reg_invalid_alert"
            android:background="@android:color/transparent"
            android:hint="@string/Enter_Code_Placeholder_txtFiled"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:maxLength="@integer/reg_et_enter_code_max_length"
            reglib:fontAssetName="CentraleSans-Light.otf" />

        <com.philips.cdp.registration.ui.customviews.XButton
            android:id="@+id/btn_reg_resend"
            style="@style/reg_mobile_verfiy_style_btn"
            android:enabled="true"
            android:text="@string/Mobile_Resend_btntxt"
            reglib:fontAssetName="CentraleSans-Book.OTF"
            android:layout_below="@+id/fl_reg_invalid_alert"
            android:layout_alignParentEnd="true"/>
        <ProgressBar
            android:id="@+id/pb_reg_verify_spinner"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:padding="@dimen/reg_pb_padding"
            android:visibility="gone" />


    </RelativeLayout>

    <FrameLayout
        android:id="@+id/fl_reg_verify_field_err"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_reg_parent_verified_field"
        android:visibility="gone"
        android:paddingLeft="@dimen/reg_edit_text_field_padding"
        android:orientation="horizontal">

        <com.philips.cdp.registration.ui.customviews.XIconTextView
            android:id="@+id/iv_reg_close"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/reg_margin_bottom"
            android:text="@string/ic_reg_close"
            android:paddingTop="@dimen/reg_close_icon_padding_top"
            android:textSize="@dimen/reg_close_icon_size"
            android:textColor="@color/reg_error_box_color"/>

        <com.philips.cdp.registration.ui.customviews.XTextView
            android:id="@+id/tv_reg_verify_err"
            style="@style/reg_error_textStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/reg_error_mapping_pdding"
            android:padding="@dimen/reg_edit_fields_padding"
            android:text="@string/reg_EmptyField_ErrorMsg"
            android:textColor="@color/reg_error_box_color"
            reglib:fontAssetName="CentraleSans-Book.OTF" />

    </FrameLayout>

</RelativeLayout>
