<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:reglib="http://reg.lib/schema"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/reg_layout_bg">

    <ScrollView
        android:id="@+id/sv_root_layout"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:background="@android:color/transparent">

        <LinearLayout
            android:id="@+id/ll_reg_root_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.philips.cdp.registration.ui.customviews.XTextView
                android:id="@+id/tv_reg_welcome"
                style="@style/reg_titleTextStyle"
                android:layout_marginTop="@dimen/reg_header_margin_top"
                android:paddingLeft="@dimen/reg_layout_margin"
                android:paddingRight="@dimen/reg_layout_margin"
                android:text="@string/reg_SignInSuccess_Welcome_lbltxt"
                reglib:fontAssetName="CentraleSans-Light.otf" />

            <View style="@style/reg_line" />

            <com.philips.cdp.registration.ui.customviews.XTextView
                android:id="@+id/tv_reg_sign_in_using"
                style="@style/reg_textStyle"
                android:paddingLeft="@dimen/reg_layout_margin"
                android:paddingRight="@dimen/reg_layout_margin"
                android:text="@string/reg_InitialSignedIn_SigninEmailText"
                reglib:fontAssetName="CentraleSans-Book.OTF" />

            <View style="@style/reg_line"
                  android:layout_marginTop="0dip"/>

            <LinearLayout
                android:id="@+id/rl_reg_continue_id"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/reg_layout_margin"
                android:paddingRight="@dimen/reg_layout_margin">

                <FrameLayout
                    android:id="@+id/fl_reg_sign_in"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/reg_btn_height"
                    android:layout_marginBottom="@dimen/reg_margin_bottom">

                    <com.philips.cdp.registration.ui.customviews.XButton
                        android:id="@+id/btn_reg_continue"
                        style="@style/reg_style_btn"
                        android:enabled="true"
                        android:text="@string/reg_Continue_Btntxt"
                        android:layout_height="@dimen/reg_btn_height"
                        reglib:fontAssetName="CentraleSans-Book.OTF" />

                    <ProgressBar
                        android:id="@+id/pb_reg_log_out_from_begin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="@dimen/reg_pb_padding"
                        android:visibility="gone" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/fl_reg_logout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/reg_btn_height"
                    android:layout_below="@+id/fl_reg_sign_in">

                    <com.philips.cdp.registration.ui.customviews.XButton
                        android:id="@+id/btn_reg_sign_out"
                        style="@style/reg_forgot_password"
                        android:layout_height="@dimen/reg_btn_height"
                        android:background="@drawable/reg_btn_forgot_selector"
                        android:text="@string/reg_SignOut_btntxt"
                        reglib:fontAssetName="CentraleSans-Book.OTF" />

                    <ProgressBar
                        android:id="@+id/pb_reg_log_out_spinner"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:padding="@dimen/reg_pb_padding"
                        android:visibility="gone" />
                </FrameLayout>

            </LinearLayout>

            <com.philips.cdp.registration.ui.customviews.XRegError
                android:id="@+id/reg_error_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/reg_margin_bottom"
                android:paddingLeft="@dimen/reg_layout_margin"
                android:paddingRight="@dimen/reg_layout_margin"
                android:visibility="gone" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/reg_scroll_margin" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>