<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:reglib="http://reg.lib/schema"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:orientation="horizontal" >

    <com.philips.cdp.registration.ui.customviews.XErrorAlertIcon
        android:layout_width="@dimen/reg_err_alert_width"
        android:layout_height="@dimen/reg_err_alert_width"
        android:layout_gravity="top"
        android:layout_marginRight="@dimen/reg_err_mapping_margin_right"
        android:layout_marginTop="@dimen/reg_err_mapping_mergin_top"
        android:textSize="@dimen/reg_error_alert_size"
        android:textStyle="bold"
        android:text="!"/>

    <ImageView
        android:layout_width="@dimen/reg_err_alert_width"
        android:layout_height="@dimen/reg_err_alert_width"
        android:layout_gravity="top"
        android:layout_marginTop="@dimen/reg_left_arrow_margin_top"
        android:layout_marginRight="@dimen/reg_left_arrow_margin_right"
        android:layout_marginLeft="@dimen/reg_left_arrow_margin_left"
        android:src="@drawable/reg_arrow_left"
        android:contentDescription="@string/content_desc" />

    <com.philips.cdp.registration.ui.customviews.XTextView
        android:id="@+id/tv_reg_error_message"
        style="@style/reg_error_textStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/reg_rect"
        android:padding="@dimen/reg_err_mapping_padding"
        android:text="@string/NoNetworkConnection"
        reglib:fontAssetName="CentraleSans-Book.OTF" />

</LinearLayout>