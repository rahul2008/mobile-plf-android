<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:reglib="http://reg.lib/schema"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/reg_layout_bg"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <ScrollView
        android:id="@+id/sv_root_layout"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:background="@android:color/transparent">

        <LinearLayout
            android:id="@+id/ll_reg_root_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_reg_create_account_fields"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/reg_header_margin_top"
                android:orientation="vertical"
                android:paddingLeft="@dimen/reg_layout_margin"
                android:paddingRight="@dimen/reg_layout_margin">

                <com.philips.cdp.registration.ui.customviews.XTextView
                    android:id="@+id/reg_welcome_id"
                    style="@style/reg_textStyle"
                    android:layout_marginBottom="@dimen/reg_margin_bottom"
                    android:layout_marginTop="0dip"
                    android:gravity="left"
                    android:text="@string/TraditionalSignIn_SignInWithMyPhilips_lbltxt"
                    android:textSize="@dimen/reg_title_text_size"
                    reglib:fontAssetName="CentraleSans-Book.OTF" />

                <com.philips.cdp.registration.ui.customviews.XPhoneNumber
                    android:id="@+id/rl_reg_mobile_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/reg_margin_bottom" />

                <com.philips.cdp.registration.ui.customviews.XPassword
                    android:id="@+id/rl_reg_password_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/reg_margin_bottom" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_reg_attention_box"
                style="@style/reg_text_background"
                android:layout_marginTop="0dip"
                android:visibility="gone">

                <com.philips.cdp.registration.ui.customviews.XHavingProblems
                    android:id="@+id/view_having_problem"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/reg_margin_bottom"
                    android:paddingLeft="@dimen/reg_layout_margin"
                    android:paddingRight="@dimen/reg_layout_margin"
                    android:paddingTop="@dimen/reg_margin_bottom"
                    android:visibility="gone" />

                <com.philips.cdp.registration.ui.customviews.XTextView
                    android:id="@+id/tv_reg_resend_details"
                    style="@style/reg_text_description"
                    android:text="@string/VerifyEmail_ResendErrorMsg_lbltxt"
                    reglib:fontAssetName="CentraleSans-Book.OTF" />
            </LinearLayout>

            <com.philips.cdp.registration.ui.customviews.XRegError
                android:id="@+id/reg_error_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/reg_margin_bottom"
                android:paddingLeft="@dimen/reg_layout_margin"
                android:paddingRight="@dimen/reg_layout_margin" />

            <View
                android:id="@+id/view_reg_attention_box_line"
                style="@style/reg_line" />

            <RelativeLayout
                android:id="@+id/rl_reg_welcome_container"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/reg_layout_margin"
                android:paddingRight="@dimen/reg_layout_margin">

                <FrameLayout
                    android:id="@+id/fl_reg_sign_in"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/reg_btn_height"
                    android:layout_marginBottom="@dimen/reg_margin_bottom">

                    <com.philips.cdp.registration.ui.customviews.XButton
                        android:id="@+id/btn_reg_sign_in"
                        style="@style/reg_style_btn"
                        android:enabled="false"
                        android:text="@string/SigIn_TitleTxt"
                        reglib:fontAssetName="CentraleSans-Book.OTF" />

                    <ProgressBar
                        android:id="@+id/pb_reg_sign_in_spinner"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:padding="@dimen/reg_pb_padding"
                        android:visibility="gone" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/fl_reg_forgot_password"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/reg_btn_height"
                    android:layout_below="@+id/fl_reg_sign_in"
                    android:layout_marginBottom="@dimen/reg_margin_bottom">

                    <com.philips.cdp.registration.ui.customviews.XButton
                        android:id="@+id/btn_reg_forgot_password"
                        style="@style/reg_forgot_password"
                        android:layout_height="@dimen/reg_btn_height"
                        android:background="@drawable/reg_btn_forgot_selector"
                        android:text="@string/TraditionalSignIn_ForgotPwd_btntxt"
                        reglib:fontAssetName="CentraleSans-Book.OTF" />

                    <ProgressBar
                        android:id="@+id/pb_reg_forgot_spinner"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:padding="@dimen/reg_pb_padding"
                        android:visibility="gone" />
                </FrameLayout>
                <FrameLayout
                    android:id="@+id/fl_reg_login_using_mail"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/reg_btn_height"
                    android:layout_below="@+id/fl_reg_forgot_password"
                    android:layout_marginBottom="@dimen/reg_margin_bottom">

                    <com.philips.cdp.registration.ui.customviews.XButton
                        android:id="@+id/btn_reg_login_using_mail"
                        style="@style/reg_forgot_password"
                        android:layout_height="@dimen/reg_btn_height"
                        android:background="@drawable/reg_btn_forgot_selector"
                        android:text="@string/Login_using_email_btntxt"
                        reglib:fontAssetName="CentraleSans-Book.OTF" />

                </FrameLayout>
                <FrameLayout
                    android:id="@+id/fl_reg_resend"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/reg_btn_height"
                    android:layout_below="@+id/fl_reg_login_using_mail"
                    android:layout_marginBottom="@dimen/reg_margin_bottom">

                    <com.philips.cdp.registration.ui.customviews.XButton
                        android:id="@+id/btn_reg_resend"
                        style="@style/reg_forgot_password"
                        android:layout_height="@dimen/reg_btn_height"
                        android:background="@drawable/reg_btn_forgot_selector"
                        android:text="@string/Resend_btntxt"
                        android:visibility="gone"
                        reglib:fontAssetName="CentraleSans-Book.OTF" />

                    <ProgressBar
                        android:id="@+id/pb_reg_resend_spinner"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:padding="@dimen/reg_pb_padding"
                        android:visibility="gone" />
                </FrameLayout>

            </RelativeLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/reg_scroll_margin" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>