<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:reglib="http://reg.lib/schema"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/reg_layout_bg">

    <ScrollView
        android:id="@+id/sv_root_layout"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:background="@android:color/transparent">

        <LinearLayout
            android:id="@+id/ll_reg_root_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.philips.cdp.registration.ui.customviews.XTextView
                android:id="@+id/tv_reg_welcome"
                style="@style/reg_titleTextStyle"
                android:text="@string/reg_Welcome_Welcome_lbltxt"
                reglib:fontAssetName="CentraleSans-Light.otf" />

            <com.philips.cdp.registration.ui.customviews.XTextView
                android:id="@+id/tv_reg_create_account"
                style="@style/reg_textStyle"
                android:paddingLeft="@dimen/reg_layout_margin"
                android:paddingRight="@dimen/reg_layout_margin"
                android:layout_marginTop="@dimen/reg_margin_bottom"
                android:text="@string/Welcome_needAccountto_lbltxt"
                reglib:fontAssetName="CentraleSans-Book.OTF" />

            <LinearLayout
                android:id="@+id/rl_reg_welcome_container"
                style="@style/reg_text_background"
                android:layout_marginBottom="@dimen/reg_common_margin_top"
                android:orientation="vertical">

                <com.philips.cdp.registration.ui.customviews.XTextView
                    android:id="@+id/tv_reg_legal_notice"
                    style="@style/reg_text_description"
                    android:layout_marginBottom="-20dp"
                    android:text="@string/reg_AgeLimitText"
                    reglib:fontAssetName="CentraleSans-Book.OTF" />

                <com.philips.cdp.registration.ui.customviews.XTextView
                    android:id="@+id/tv_reg_terms_and_condition"
                    style="@style/reg_text_description"
                    android:text="@string/reg_LegalNoticeText"
                    reglib:fontAssetName="CentraleSans-Book.OTF" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/rl_reg_singin_options"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/reg_layout_margin"
                android:paddingRight="@dimen/reg_layout_margin"
                android:layout_marginBottom="@dimen/reg_margin_bottom">


                <com.philips.cdp.registration.ui.customviews.XProviderButton
                    android:id="@+id/btn_reg_my_philips"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    reglib:providerBackground="@drawable/reg_btn_selector"
                    reglib:providerName="@string/reg_myphilips"
                    reglib:providerTextColor="@drawable/reg_btn_text_selector" />

                <LinearLayout
                    android:id="@+id/ll_reg_social_provider_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"  />

            </LinearLayout>



            <View style="@style/reg_line" />
            <LinearLayout
                android:id="@+id/ll_reg_create_account_container"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/reg_layout_margin"
                android:paddingRight="@dimen/reg_layout_margin">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/reg_margin_bottom">

                    <com.philips.cdp.registration.ui.customviews.XTextView
                        android:id="@+id/tv_reg_or_sign_with"
                        style="@style/reg_textStyle"
                        android:layout_width="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/reg_Create_With_lbltxt"
                        reglib:fontAssetName="CentraleSans-Book.OTF" />

                    <ProgressBar
                        android:id="@+id/pb_reg_janrain_init"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/reg_btn_height"
                        android:layout_toRightOf="@+id/tv_reg_or_sign_with"
                        android:padding="@dimen/reg_pb_padding"
                        android:visibility="invisible" />
                </RelativeLayout>

                <com.philips.cdp.registration.ui.customviews.XButton
                    android:id="@+id/btn_reg_create_account"
                    style="@style/reg_style_btn"
                    android:enabled="false"
                    android:text="@string/reg_Create_Account_CreateMyPhilips_btntxt"
                    reglib:fontAssetName="CentraleSans-Book.OTF" />

                <com.philips.cdp.registration.ui.customviews.XRegError
                    android:id="@+id/reg_error_msg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/reg_margin_bottom"></com.philips.cdp.registration.ui.customviews.XRegError>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/reg_scroll_margin" />
            </LinearLayout>


        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:id="@+id/ll_root_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="invisible"
        android:background="@color/reg_social_to_social_ui_blocker_bg">
        <ProgressBar
            android:layout_width="@dimen/reg_btn_height"
            android:layout_height="@dimen/reg_btn_height"
            android:layout_gravity="center"

            />
    </LinearLayout>


</RelativeLayout>