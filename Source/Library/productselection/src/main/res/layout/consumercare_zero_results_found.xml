<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/detailed_screen_parent_image"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginTop="30dip"
    android:minHeight="85dp"
    android:orientation="vertical">

<LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal">

   <ImageView
       android:id="@+id/image"
       android:layout_width="25dp"
       android:layout_height="25dp"
       android:layout_marginRight="7dp"
       android:background="@drawable/consumercare_info"
       android:scaleType="fitXY"/>

   <com.philips.platform.uid.view.widget.Label
       style="@style/UIDLabel"
       android:id="@+id/product_name_view"
       fontPath="fonts/centralesansbold.ttf"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="@string/Zero_records_found"
       android:textSize="16sp"/>
   </LinearLayout>

   <com.philips.platform.uid.view.widget.Label
       style="@style/UIDLabel"
       android:id="@+id/ctn_view"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginTop="4dp"
       android:padding="5dip"
       android:includeFontPadding="false"
       android:text="@string/Zero_records_found_filter"
       android:textSize="12sp" />
</LinearLayout>