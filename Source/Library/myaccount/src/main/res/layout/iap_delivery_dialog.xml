<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="match_parent">

    <com.philips.platform.uid.view.widget.Label
        style="@style/UIDLabel"
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/iap_delivery_method"
        android:layout_marginTop="@dimen/iap_shipping_address_margin_top_bottom"
        android:layout_marginBottom="@dimen/iap_shipping_address_margin_top_bottom"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/iap_divider_height"/>

    <ListView
        android:id="@+id/lv"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"/>

</LinearLayout>