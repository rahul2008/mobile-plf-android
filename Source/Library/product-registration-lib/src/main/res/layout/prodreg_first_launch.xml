<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_above="@+id/yes_register_button"
    android:layout_marginBottom="@dimen/scroll_view_bottom_padding"
    android:fillViewport="true">

    <LinearLayout
        style="@style/Prod_Reg_Generic_Style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/conf_action_textview"
            style="@style/ProductRegistrationHeaderTitleTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/PPR_RegYourProduct_Lbltxt"
            />

        <TextView
            android:id="@+id/conf_subtext_textview"
            style="@style/ProductRegistrationSubTitleTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/pr_top_padding_sm"
            android:text="@string/PPR_ReceiveUpdates_Lbltxt"/>

        <TextView
            android:id="@+id/conf_subtext_two_textview"
            style="@style/ProductRegistrationSubTitleTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/prod_reg_benefits_conf_message"
            />

        <Button
            android:id="@+id/yes_register_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/pr_all_button_top_margin"
            android:text="@string/PPR_Yes_Btntxt"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/no_thanks_button"
            style="?attr/uikit_outlinedButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="@dimen/pr_bottom_padding_sm"
            android:layout_marginTop="@dimen/pr_c_value_sm"
            android:text="@string/PPR_RegLater_Btntxt"
            android:textAllCaps="false"/>
    </LinearLayout>
</ScrollView>

