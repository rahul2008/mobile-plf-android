<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:padding="@dimen/uikit_modal_alert_button_left_margin">

    <TextView
        android:id="@+id/serial_number_title_message"
        style="@style/ProductRegistrationProductHeaderTitleTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""/>

    <TextView
        android:id="@+id/serial_number_registered_message"
        style="@style/ProductRegistrationProductSubTitleTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/pr_registration_margin_top"
        android:text=""
        android:visibility="gone"/>

    <TextView
        android:id="@+id/serial_number_warranty_message"
        style="@style/ProductRegistrationProductSubTitleTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:visibility="gone"/>

    <Button
        android:id="@+id/button_continue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/pr_registration_margin_top"
        android:text="@string/PPR_Continue"/>


</LinearLayout>