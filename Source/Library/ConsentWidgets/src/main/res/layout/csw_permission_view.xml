<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
  >

    <RelativeLayout
        style="@style/BaseLayoutMargins.Dimens"
        android:layout_marginTop="12dp"
        android:orientation="horizontal" >
        <com.philips.platform.uid.view.widget.Switch
            android:id="@+id/toggleicon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/layout_margin_left_right"
            android:checked="false"
            android:gravity="center_vertical|end"
            />
        <com.philips.platform.uid.view.widget.Label
            style="@style/TestButtonTexts"
            android:layout_alignParentStart="true"
            android:gravity="center_vertical|start"
            android:layout_toStartOf="@id/toggleicon"
            android:text="@string/allow_track_use"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.philips.platform.uid.view.widget.Label
            style="@style/TestButtonTexts"
            android:clickable="true"
            android:layout_alignParentStart="true"
            android:gravity="center_vertical|start"
            android:autoLink="web"
            android:text="@string/csw_what_does_this_mean"/>
    </RelativeLayout>
</LinearLayout>