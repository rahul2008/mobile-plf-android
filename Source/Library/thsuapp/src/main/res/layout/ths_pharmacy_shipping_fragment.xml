<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/ths_shipping_pharmacy_layout"
    android:layout_height="match_parent"
    android:background="?attr/uidSeparatorContentNormalBackgroundColor">


    <com.philips.platform.uid.view.widget.Label
        android:id="@+id/ps_prescription_sent_label"
        style="@style/UIDLabel.RecyclerViewItemDescriptionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="14dp"
        android:layout_marginStart="16dp"
        android:text="Prescriptions will be sent to" />

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/ps_pharmacy_list_layout_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ps_prescription_sent_label"
        android:orientation="vertical"
        android:background="?attr/uidContentPrimaryBackgroundColor"
        android:paddingEnd="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingStart="16dp">

        <com.philips.platform.uid.view.widget.Label
            android:id="@+id/ps_pharmacy_name"
            android:textColor="?attr/uidContentItemDefaultNormalBodyTextColor"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="Miller Drug mail order" />

        <com.philips.platform.uid.view.widget.Label
            android:id="@+id/ps_pharmacy_address_line_one"
            android:textColor="?attr/uidContentItemDefaultNormalDescriptorTextColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ps_pharmacy_name"
            android:layout_marginBottom="12dp"
            android:text="Miller Drug mail order" />

        <com.philips.platform.uid.view.widget.Label
            android:id="@+id/ps_pharmacy_address_line_two"
            android:textColor="?attr/uidContentItemDefaultNormalDescriptorTextColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/ps_pharmacy_address_line_one"
            android:layout_alignBottom="@+id/ps_pharmacy_address_line_one"
            android:layout_toEndOf="@+id/ps_pharmacy_address_line_one"
            android:text="Miller Drug mail order" />

        <com.philips.platform.uid.view.widget.Label
            android:id="@+id/ps_pharmacy_state"
            android:textColor="?attr/uidContentItemDefaultNormalDescriptorTextColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ps_pharmacy_address_line_one"
            android:text="Miller Drug mail order" />

        <com.philips.platform.uid.view.widget.Label
            android:id="@+id/ps_pharmacy_zip_code"
            style="@style/UIDLabel.RecyclerViewItemDescriptionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/ps_pharmacy_state"
            android:layout_alignBottom="@+id/ps_pharmacy_state"
            android:layout_toEndOf="@+id/ps_pharmacy_state"
            android:text="Miller Drug mail order" />

        <com.philips.platform.uid.view.widget.ImageButton
            android:id="@+id/ps_edit_pharmacy"
            style="@style/UIDQuietIconButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:uidImageButtonDrawableSrc="@android:drawable/ic_menu_edit"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <View
        android:id="@+id/divider_one"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/ps_pharmacy_list_layout_item"
        android:background="?attr/uidSeparatorContentNormalBackgroundColor" />

    <com.philips.platform.uid.view.widget.Label
        android:id="@+id/ps_shipped_to_label"
        style="@style/UIDLabel.RecyclerViewItemDescriptionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/ps_prescription_sent_label"
        android:layout_below="@+id/divider_one"
        android:layout_marginTop="14dp"
        android:text="Medications will be shipped to" />

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/ps_shipping_layout_item"
        android:layout_width="match_parent"
        android:background="?attr/uidContentPrimaryBackgroundColor"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ps_shipped_to_label"
        android:layout_marginTop="16dp"
        android:paddingTop="12dp"
        android:orientation="vertical"
        android:paddingEnd="16dp"
        android:paddingBottom="12dp"
        android:paddingStart="16dp">

        <com.philips.platform.uid.view.widget.Label
            android:id="@+id/ps_consumer_name"
            android:textColor="?attr/uidContentItemDefaultNormalBodyTextColor"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="Miller Drug mail order" />

        <com.philips.platform.uid.view.widget.Label
            android:id="@+id/ps_consumer_shipping_address"
            android:textColor="?attr/uidContentItemDefaultNormalDescriptorTextColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/ps_consumer_name"
            android:text="Miller Drug mail order" />

        <com.philips.platform.uid.view.widget.Label
            android:id="@+id/ps_consumer_shipping_zip"
            android:textColor="?attr/uidContentItemDefaultNormalDescriptorTextColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/ps_consumer_shipping_address"
            android:text="Miller Drug mail order" />

        <com.philips.platform.uid.view.widget.Label
            android:id="@+id/ps_consumer_city"
            android:textColor="?attr/uidContentItemDefaultNormalDescriptorTextColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/ps_consumer_shipping_zip"
            android:text="Miller Drug mail order" />

        <com.philips.platform.uid.view.widget.Label
            android:id="@+id/ps_consumer_state"
            android:textColor="?attr/uidContentItemDefaultNormalDescriptorTextColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/ps_consumer_city"
            android:layout_alignBottom="@+id/ps_consumer_city"
            android:layout_toEndOf="@+id/ps_consumer_name"
            android:text="Miller Drug mail order" />

        <com.philips.platform.uid.view.widget.ImageButton
            android:id="@+id/ps_edit_consumer_shipping_address"
            style="@style/UIDQuietIconButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            app:uidImageButtonDrawableSrc="@android:drawable/ic_menu_edit" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/ps_shipping_layout_item"
        android:background="?attr/uidSeparatorContentNormalBackgroundColor" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="16dp">

        <com.philips.platform.uid.view.widget.Button
            android:id="@+id/ths_ps_continue_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Continue" />
    </RelativeLayout>
</RelativeLayout>