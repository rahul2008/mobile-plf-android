<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/providerListItemLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingStart="16dp"
    android:paddingTop="16dp"
    android:paddingEnd="16dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/providerImage"
        android:layout_width="84dp"
        android:layout_height="84dp"
        android:src="@drawable/doctor_pic" />

    <RelativeLayout
        android:id="@+id/providerDetailLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/uid_label_margin_start"
        android:layout_marginStart="@dimen/uid_label_margin_start"
        android:layout_toRightOf="@+id/providerImage">

        <com.philips.platform.uid.view.widget.Label
            android:id="@+id/providerNameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/uid_dot_navigation_icon_margin"
            android:text="Dr. Eylin White"
            android:textColor="?attr/uidContentItemDefaultNormalTitleTextColor"
            android:textSize="@dimen/uid_recyclerview_item_title_text_size" />

        <com.philips.platform.uid.view.widget.Label
            android:id="@+id/practiceNameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/providerNameLabel"
            android:layout_marginBottom="@dimen/uid_dot_navigation_icon_margin"
            android:text="Pediatrician"
            android:textColor="?attr/uidContentItemDefaultNormalDescriptorTextColor"
            android:textSize="@dimen/uid_grid_descrption_size" />

        <RelativeLayout
            android:id="@+id/isAvailableLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/practiceNameLabel">

            <com.philips.platform.uid.view.widget.Label
                android:id="@+id/isAvailableLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Available Now"
                android:textColor="?attr/uidLabelValueNormalTextColor"
                android:textSize="@dimen/uid_grid_descrption_size"
                android:layout_marginStart="6dp"
                android:layout_toRightOf="@+id/isAvailableImage"
                android:layout_centerVertical="true"
                 />

            <com.philips.platform.uid.view.widget.NotificationBadge
                android:id="@+id/notification_badge"
                style="@style/NotificationBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/uid_alert_dialog_title_icon_padding"
                android:text="2"
                android:visibility="gone"
                app:backgroundTint="?attr/uidColorLevel45" />

            <ImageView
                android:id="@+id/isAvailableImage"
                android:enabled="false"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:background="@drawable/reg_circle"
                android:layout_marginBottom="8dp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/notification_badge"
                 />
        </RelativeLayout>

        <com.philips.platform.uid.view.widget.RatingBar
            android:id="@+id/providerRating"
            style="@style/UIDRatingBarStandardDisplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/isAvailableLayout"
            android:layout_marginTop="@dimen/uid_alert_dialog_title_icon_padding"
            android:layout_marginBottom="@dimen/uid_navigation_bar_padding_left"
            android:rating="5" />

    </RelativeLayout>

    <ImageView
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="16dp"
        android:src="@mipmap/right_arrow_icon" />

    <View
        android:id="@+id/end_layer"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/providerDetailLayout"
        android:background="@color/uid_gray_level_5" />
</RelativeLayout>