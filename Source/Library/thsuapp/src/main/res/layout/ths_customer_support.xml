<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ths_customer_support_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/uidContentPrimaryBackgroundColor">

    <ImageView
        android:id="@+id/pth_practice_logo"
        android:layout_width="@dimen/ths_image_size"
        android:layout_height="@dimen/ths_image_size"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/ths_fab_margin"
        android:layout_marginStart="@dimen/ths_fab_margin"
        android:src="@drawable/history_icon" />

    <com.philips.platform.uid.view.widget.Label
        android:id="@+id/pth_practice_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/pth_practice_logo"
        android:layout_toStartOf="@+id/ths_practice_arrow_image"
        android:lineSpacingExtra="@dimen/ths_body_text_line_spacing_extra"
        android:maxLines="3"
        android:text="@string/ths_customer_support"
        android:textColor="?attr/uidLabelValueNormalTextColor"
        android:textSize="@dimen/ths_body_text"
        android:textStyle="bold" />


    <com.philips.platform.uid.view.widget.Label
        android:id="@+id/ths_practice_arrow_image"
        fontPath="fonts/iconfont.ttf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/ths_fab_margin"
        android:layout_marginStart="@dimen/ths_fab_margin"
        android:gravity="center_vertical"
        android:text="@string/dls_navigationright"
        android:textAlignment="center"
        android:textColor="?attr/uidButtonPrimaryFocusBackgroundColor" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="?attr/uidSeparatorContentNormalBackgroundColor" />
</RelativeLayout>

