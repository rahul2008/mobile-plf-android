<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/providerDetailLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/uidContentPrimaryBackgroundColor"
    android:paddingLeft="@dimen/ths_fab_margin"
    android:paddingRight="@dimen/ths_fab_margin">

    <com.philips.platform.ths.utility.CircularImageView
        android:id="@+id/ths_providerImage"
        android:layout_width="84dp"
        android:layout_height="84dp"
        android:src="@drawable/doctor_placeholder"
        android:layout_marginTop="@dimen/ths_fab_margin"
        android:layout_marginBottom="@dimen/ths_fab_margin"
        android:layout_alignParentTop="true" />

    <RelativeLayout
        android:layout_toRightOf="@id/ths_providerImage"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.philips.platform.uid.view.widget.Label
            android:layout_width="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/ths_fab_margin"
            android:layout_marginEnd="@dimen/ths_fab_margin"
            android:id="@+id/ths_arrow"
            android:text="@string/dls_navigationright"
            fontPath="fonts/iconfont.ttf"
            android:textAlignment="center"
            android:gravity="center_vertical"
            android:textColor="?attr/uidButtonPrimaryFocusBackgroundColor"
            android:layout_height="wrap_content"/>

        <com.philips.platform.uid.view.widget.Label
            android:id="@+id/providerNameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/uid_dot_navigation_icon_margin"
            android:textColor="?attr/uidContentItemPrimaryNormalTextColor"
            android:textSize="@dimen/ths_title_text"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@id/ths_arrow"
            android:layout_marginLeft="@dimen/uid_label_margin_start"
            android:layout_marginStart="@dimen/uid_label_margin_start" />

        <com.philips.platform.uid.view.widget.Label
            android:id="@+id/practiceNameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/providerNameLabel"
            android:layout_marginBottom="@dimen/uid_dot_navigation_icon_margin"
            android:textColor="?attr/uidContentItemTertiaryNormalTextColor"
            android:textSize="@dimen/ths_small_body_text"
            android:paddingTop="@dimen/ths_body_text_padding"
            android:paddingBottom="@dimen/ths_body_text_padding"
            android:layout_toStartOf="@id/ths_arrow"
            android:layout_alignStart="@id/providerNameLabel" />

        <com.philips.platform.uid.view.widget.RatingBar
            android:id="@+id/providerRatingValue"
            style="@style/UIDRatingBarStandardDisplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/practiceNameLabel"
            android:layout_marginBottom="@dimen/uid_grid_title_padding"
            android:layout_marginEnd="@dimen/uid_grid_title_padding"
            android:layout_marginStart="@dimen/uid_grid_title_padding"
            android:rating="3.6"
            android:visibility="gone"
            android:stepSize=".1"
            android:textColor="?attr/uidLabelValueNormalTextColor"
            android:textSize="@dimen/uid_grid_descrption_size" />


    </RelativeLayout>

</RelativeLayout>