<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ths_payment_detail_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/pth_fab_margin"
    android:layout_marginRight="@dimen/pth_fab_margin"
    android:orientation="vertical">

    <com.philips.platform.uid.view.widget.Label
        android:id="@+id/ths_payment_detail_title_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_marginTop="24dp"
        android:text="Credit card information"
        android:textColor="?attr/uidLabelRegularNormalTextColor"
        android:textSize="20dp"
        android:textStyle="bold" />

    <com.philips.platform.uid.view.widget.Label
        android:id="@+id/ths_payment_detail_card_owner_name_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ths_payment_detail_title_label"


        android:text="Name" />

    <com.philips.platform.uid.view.widget.EditText
        android:id="@+id/ths_payment_detail_card_holder_name_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ths_payment_detail_card_owner_name_label"
        android:layout_marginBottom="@dimen/pth_margin_between_ui_control"

        android:hint="Enter card owner's name" />


    <com.philips.platform.uid.view.widget.Label
        android:id="@+id/ths_payment_detail_card_number_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ths_payment_detail_card_holder_name_edittext"

        android:text="Card Number" />

    <com.philips.platform.uid.view.widget.EditText
        android:id="@+id/ths_payment_detail_card_number_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ths_payment_detail_card_number_label"

        android:layout_marginBottom="@dimen/pth_margin_between_ui_control"
        android:digits="0123456789"
        android:inputType="number|none" />

    <com.philips.platform.uid.view.widget.Label
        android:id="@+id/ths_payment_detail_card_expiration_date_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ths_payment_detail_card_number_edittext"

        android:text="Expiration Date" />

    <RelativeLayout
        android:id="@+id/ths_payment_detail_card_expiration_date_relativelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ths_payment_detail_card_expiration_date_label"
        android:layout_marginBottom="@dimen/pth_margin_between_ui_control"


        >

        <com.philips.platform.uid.view.widget.EditText
            android:id="@+id/ths_payment_detail_card_expiration_month_edittext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:digits="0123456789"
            android:hint=" MM "
            android:inputType="number|none"
            android:maxLength="2" />

        <com.philips.platform.uid.view.widget.Label
            android:id="@+id/ths_payment_detail_card_expiration_month_year_seperator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/ths_payment_detail_card_expiration_month_edittext"
            android:gravity="center_vertical"
            android:text=" / " />

        <com.philips.platform.uid.view.widget.EditText
            android:id="@+id/ths_payment_detail_card_expiration_year_edittext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/ths_payment_detail_card_expiration_month_year_seperator"
            android:digits="0123456789"
            android:hint=" YYYY "
            android:inputType="number|none"
            android:maxLength="4" />
    </RelativeLayout>

    <com.philips.platform.uid.view.widget.Label
        android:id="@+id/ths_payment_detail_card_cvc_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ths_payment_detail_card_expiration_date_relativelayout"

        android:text="CVC Code" />

    <com.philips.platform.uid.view.widget.EditText
        android:id="@+id/ths_payment_detail_card_cvc_edittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ths_payment_detail_card_cvc_label"
        android:layout_marginBottom="@dimen/pth_margin_between_ui_control"
        android:digits="0123456789"
        android:hint=" 000 "
        android:inputType="number|none"
        android:maxLength="4" />

    <com.philips.platform.uid.view.widget.Label
        android:id="@+id/ths_payment_detail_card_cvc_help"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ths_payment_detail_card_cvc_edittext"

        android:text="What's this" />

    <com.philips.platform.uid.view.widget.Button
        android:id="@+id/ths_payment_detail_continue_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/pth_margin_bottom"
        android:text="Ok Continue"></com.philips.platform.uid.view.widget.Button>
</RelativeLayout>