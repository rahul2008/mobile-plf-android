<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:reglib="http://reg.lib/schema"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <com.philips.cdp.registration.ui.customviews.XIconTextView
        android:id="@+id/tv_icon_text"
        style="@style/reg_correct_incorrect_text"
        android:layout_marginRight="5dip"
        android:text="@string/ic_reg_close"
        android:textColor="@color/reg_password_hint_incorrect_ic_color" />


    <com.philips.cdp.registration.ui.customviews.XTextView
        android:id="@+id/tv_icon_text_desc"
        style="@style/reg_password_hint_text"
        android:layout_gravity="center_vertical"
        android:text="@string/reg_Create_Account_PasswordHint_Length_lbltxt"
        reglib:fontAssetName="CentraleSans-Book.OTF" />


</LinearLayout>