<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:id="@id/uid_gridview"
             xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="@dimen/uid_grid_item_size"
             android:descendantFocusability="blocksDescendants">

    <ImageView
        android:id="@id/uid_gridview_thumbnail"
        style="@style/UIDGridViewImage"
        android:layout_height="@dimen/uid_grid_item_size" />

    <com.philips.platform.uid.utils.GradientContainer
        style="@style/UIDGridGradientStyle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/uid_grid_single_line_text_height">

        <FrameLayout
            android:id="@id/uid_gridview_icon_holder"
            android:layout_width="@dimen/uid_grid_icon_holder_width"
            android:layout_height="@dimen/uid_grid_single_line_text_height"
            android:layout_gravity="center|end">

            <com.philips.platform.uid.view.widget.ImageButton
                android:id="@id/uid_gridview_icon"
                style="@style/UIDGridViewImageButton"/>
        </FrameLayout>

        <com.philips.platform.uid.view.widget.Label
            android:id="@id/uid_gridview_title"
            style="@style/UIDLabel.GridViewTitleText"
            android:layout_gravity="center|start"
            android:layout_marginEnd="@dimen/uid_grid_icon_holder_width"
            />

    </com.philips.platform.uid.utils.GradientContainer>
</FrameLayout>
