<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="BaseLayoutMargins">
        <item name="android:background">?attr/uitContentPrimary</item>
    </style>

    <style name="BaseLayoutMargins.Dimens">
        <item name="android:layout_height">@dimen/layout_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="TestButtonTexts">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/uitTextPrimaryColor</item>
        <item name="android:textSize">@dimen/button_toggle_text_size</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/layout_margin_left_right</item>
        <item name="fontPath">fonts/centralesansbook.ttf</item>
    </style>

    <style name="ButtonsCategoryStyle">
        <item name="android:layout_height">@dimen/button_category_divider_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">?attr/uitColorLevel75</item>
        <item name="android:textSize">@dimen/button_category_text_size</item>
        <item name="android:background">?attr/uitColorLevel05</item>
        <item name="fontPath">fonts/centralesansbook.ttf</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:paddingLeft">@dimen/layout_margin_left_right</item>
    </style>
    <style name="ThemeSettingsHeader1Text">
        <item name="android:textColor">@android:color/primary_text_light</item>
        <item name="android:textSize">16sp</item>
        <item name="fontPath">fonts/centralesansboook.ttf</item>
    </style>

    <style name="ThemeSettingsHeader2Text">
        <item name="android:textColor">@android:color/primary_text_light</item>
        <item name="android:textSize">12sp</item>
        <item name="fontPath">fonts/centralesansboook.ttf</item>
    </style>

    <style name="ThemeSettingsLabelText">
        <item name="android:textColor">?attr/uitContentPrimary</item>
        <item name="android:textSize">10sp</item>
        <item name="android:paddingStart">4dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="fontPath">fonts/centralesansboook.ttf</item>
    </style>
</resources>
