<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.view.ViewPager
        android:id="@+id/dot_navigation_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"/>

    <com.philips.platform.uid.view.widget.DotNavigationIndicator
        android:id="@+id/pager_indicator"
        style="@style/UIDDotNavigationIndicatorItemStyle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/uid_dot_navigation_indicator_min_height"
        android:layout_alignParentBottom="true"/>

    <com.philips.platform.uid.view.widget.DotNavigationIndicator
        android:id="@+id/empty_pager_indicator"
        style="@style/UIDDotNavigationIndicatorItemStyle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/uid_dot_navigation_indicator_min_height"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
