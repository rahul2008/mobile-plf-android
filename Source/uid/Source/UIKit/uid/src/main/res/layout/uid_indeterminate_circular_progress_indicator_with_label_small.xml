<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

    <com.philips.platform.uid.view.widget.ProgressBar
        android:id="@+id/uid_progress_indicator"
        android:layout_centerHorizontal="true"
        style="@style/UIDProgressBarCircularIndeterminateSmall"/>

    <com.philips.platform.uid.view.widget.Label
        android:id="@+id/uid_progress_indicator_label_bottom_center"
        style="@style/UIDLabel.ProgressBarLabel"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/uid_progress_indicator"
        android:layout_marginTop="@dimen/uid_circular_progress_indicator_small_label_margin"
        android:visibility="gone"/>

    <com.philips.platform.uid.view.widget.Label
        android:id="@+id/uid_progress_indicator_label_center"
        style="@style/UIDLabel.ProgressBarLabel"
        android:layout_centerInParent="true"
        android:visibility="gone"/>
</RelativeLayout>