<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
                name="data"
                type="com.philips.platform.catalogapp.DataHolder"/>
    </data>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/uid_recyclerview_item_two_lines_height"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingStart="@dimen/uid_recyclerview_margin_left_right"
            android:paddingEnd="@dimen/uid_recyclerview_margin_left_right"
            android:background="@drawable/uid_list_item_selector">

        <com.philips.platform.uid.view.widget.Label
                style="@style/UIDLabel.RecyclerViewItemMultipleLinesTitleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{data.text}"/>

        <com.philips.platform.uid.view.widget.Label
                style="@style/UIDLabel.RecyclerViewItemDescriptionText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{data.description}"/>
    </LinearLayout>
</layout>