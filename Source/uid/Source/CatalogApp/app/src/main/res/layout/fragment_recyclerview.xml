<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View"/>

        <variable
            name="frag"
            type="com.philips.platform.catalogapp.fragments.RecyclerViewFragment"/>
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    style="@style/BaseLayoutMargins.Dimens"
                    android:orientation="horizontal">

                    <com.philips.platform.uid.view.widget.Label
                        style="@style/TestButtonTexts"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="@string/show_separators"
                        android:textSize="@dimen/uid_recyclerview_item_title_text_size"/>

                    <com.philips.platform.uid.view.widget.Switch
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/layout_margin_left_right"
                        android:layout_weight="1"
                        android:checked="@={frag.isSeparatorEnabled}"
                        android:onCheckedChanged="@{(v, isChecked) -> frag.setSeparatorEnabled(isChecked)}"/>
                </LinearLayout>

                <include layout="@layout/divider_layout"/>

                <LinearLayout
                    style="@style/BaseLayoutMargins.Dimens"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/TestButtonTexts"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="@string/show_header"/>

                    <com.philips.platform.uid.view.widget.Switch
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/layout_margin_left_right"
                        android:layout_weight="1"
                        android:checked="@={frag.isHeaderEnabled}"
                        android:onCheckedChanged="@{(v, isChecked) -> frag.setHeaderEnabled(isChecked)}"/>
                </LinearLayout>

                <include layout="@layout/divider_layout"/>

                <LinearLayout
                    style="@style/BaseLayoutMargins.Dimens"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/TestButtonTexts"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="@string/disabled_listview"/>

                    <com.philips.platform.uid.view.widget.Switch
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/layout_margin_left_right"
                        android:layout_weight="1"
                        android:checked="@={frag.isRecyclerViewDisabled}"
                        android:onCheckedChanged="@{(v, isChecked) -> frag.setRecyclerViewEnabled(isChecked)}"/>
                </LinearLayout>

                <com.philips.platform.uid.view.widget.Label
                    style="@style/UIDLabel.Header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:text="@string/template_selection"/>

                <com.philips.platform.uid.view.widget.RadioGroup
                    android:id="@+id/radioGroupTemplates"
                    style="@style/TestRadioGroupStyle"
                    android:orientation="vertical">

                    <com.philips.platform.uid.view.widget.RadioButton
                        android:id="@+id/single_line_with_icon"
                        style="@style/TestRadioButtonStyle"
                        android:checked="@{frag.isIconTemplateSelected}"
                        android:onCheckedChanged="@{(v, isChecked) -> frag.setIsIconTemplateSelected(isChecked)}"
                        android:text="@string/single_line_with_icon" />

                    <com.philips.platform.uid.view.widget.RadioButton
                        android:id="@+id/two_lines"
                        style="@style/TestRadioButtonStyle"
                        android:checked="@{!frag.isIconTemplateSelected}"
                        android:text="@string/two_lines"/>
                </com.philips.platform.uid.view.widget.RadioGroup>
            </LinearLayout>

            <include
                android:id="@+id/divider"
                layout="@layout/uid_horizontal_separator"
                />

            <include
                android:id="@+id/recyclerview_recyclerview"
                layout="@layout/uid_recyclerview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </ScrollView>
</layout>