<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_select_address"
        style="@style/iapCentralesansBoldFont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/iap_selection_address_layout_margin"
        android:layout_marginStart="@dimen/iap_selection_address_layout_margin"
        android:layout_marginTop="@dimen/iap_selection_address_select_address_margint_top"
        android:text="@string/iap_selection_select_address"
        android:textColor="?attr/uikit_baseColor"
        android:textSize="@dimen/iap_selection_address_select_address_text_size" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/iap_divider_height"
        android:layout_below="@id/tv_select_address"
        android:background="?attr/uikit_listDividerColor" />

    <Button
        android:id="@+id/btn_cancel"
        style="?attr/uikit_outlinedButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/iap_selection_address_cancel_margin_bottom"
        android:layout_marginEnd="@dimen/iap_selection_address_layout_margin"
        android:layout_marginStart="@dimen/iap_selection_address_layout_margin"
        android:text="@string/iap_cancel"
        android:textAllCaps="false" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/shipping_addresses"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/btn_cancel"
        android:layout_marginBottom="@dimen/iap_selection_address_layout_margin"
        android:layout_below="@id/divider" />
</RelativeLayout>