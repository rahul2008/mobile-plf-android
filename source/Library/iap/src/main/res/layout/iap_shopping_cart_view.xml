<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <Button
        android:id="@+id/continues_btn"
        style="?attr/uikit_outlinedButtonStyle"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="@dimen/iap_shopping_cart_image_margin_top"
        android:layout_marginRight="@dimen/iap_shopping_cart_image_margin_top"
        android:enabled="true"
        android:text="@string/iap_continue_shopping"
        android:visibility="visible" />


    <Button
        android:id="@+id/checkout_btn"
        style="@style/Button.Solid.BrightOrange"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_above="@id/continues_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/iap_shopping_cart_price_margin_bottom"
        android:layout_marginLeft="@dimen/iap_shopping_cart_image_margin_top"
        android:layout_marginRight="@dimen/iap_shopping_cart_image_margin_top"
        android:layout_marginTop="@dimen/iap_shopping_cart_image_margin_top"
        android:enabled="true"
        android:text="@string/iap_checkout"
        android:visibility="visible" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/shopping_cart_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/checkout_btn"
        android:layout_alignParentTop="true"
        android:listSelector="@android:color/transparent"></android.support.v7.widget.RecyclerView>

</RelativeLayout>