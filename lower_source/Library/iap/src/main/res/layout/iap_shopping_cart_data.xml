<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="4dp">

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/image"
        style="@style/networkImage"
        android:layout_centerVertical="true" />


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/image"
        android:gravity="center_vertical">

        <FrameLayout
            android:id="@+id/frame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true">

            <ImageView
                android:id="@+id/dots"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginBottom="@dimen/iap_shopping_cart_image_margin_top"
                android:layout_marginEnd="@dimen/iap_shopping_cart_image_margin_top"
                android:layout_marginStart="@dimen/iap_shopping_cart_dots_margin_left"
                android:layout_marginTop="@dimen/iap_shopping_cart_image_margin_top" />
        </FrameLayout>

        <TextView
            android:id="@+id/price"
            style="@style/iapCentralesansBoldFont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/iap_shopping_cart_price_margin_bottom"
            android:layout_marginTop="@dimen/iap_shopping_cart_image_margin_top"
            android:layout_toStartOf="@id/frame"
            android:includeFontPadding="false"
            android:textColor="?attr/uikit_baseColor"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/text1Name"
            style="@style/iapCentralesansBoldFont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/price"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="@dimen/iap_shopping_cart_price_margin_bottom"
            android:layout_marginEnd="@dimen/iap_shopping_cart_image_right"
            android:layout_marginTop="@dimen/iap_shopping_cart_image_margin_top"
            android:layout_toStartOf="@id/price"
            android:includeFontPadding="false"
            android:scrollHorizontally="false"
            android:textColor="?attr/uikit_baseColor"
            android:textSize="@dimen/title" />

        <RelativeLayout
            android:id="@+id/quantity_count_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text1Name"
            android:layout_marginBottom="@dimen/iap_shopping_cart_image_margin_top"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/from"
                style="@style/iapCentralesansBookFont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/iap_shopping_cart_image_right"
                android:includeFontPadding="false"
                android:text="@string/iap_product_item_quantity"
                android:textColor="?attr/uikit_baseColor"
                android:textSize="@dimen/quantity" />

            <TextView
                android:id="@+id/text2value"
                style="@style/tvTitle"
                android:layout_alignBaseline="@id/from"
                android:layout_toEndOf="@id/from"
                android:drawablePadding="@dimen/iap_count_drop_down_icon_padding"
                android:textColor="?attr/uikit_baseColor"
                android:textSize="14sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/out_of_stock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/quantity_count_layout"
            android:layout_below="@+id/text1Name"
            android:layout_marginStart="12dp"
            android:layout_toEndOf="@id/quantity_count_layout"
            android:textColor="@android:color/holo_red_dark"
            android:visibility="gone" />

    </RelativeLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/image"
        android:background="?attr/uikit_listDividerColor" />

</RelativeLayout>